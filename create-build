npm install

METERIAN_PATH=/tmp/meterian-cli.jar
if [ ! -f "$METERIAN_PATH" ]
then wget http://meterian.com/downloads/meterian-cli.jar -O /tmp/meterian-cli.jar
fi

wget -c -N -q http://meterian.com/downloads/meterian-cli.jar -O /tmp/meterian-cli.jar

java -jar /tmp/meterian-cli.jar --project-url=pagesify --project-commit=$GIT_COMMIT --project-branch=$GIT_BRANCH
if [ $? != 0 ]
then echo METERIAN SCAN HAS FAILED; echo $?; exit 1
fi 

npm run build

mkdir -p bin
tar -czvf ./bin/pagesify-web-build.tar.gz ./build/*

rm -r build